<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <DebugType>portable</DebugType>
    <AssemblyName>eShop</AssemblyName>
    <OutputType>Exe</OutputType>
    <EnableDefaultContentItems>false</EnableDefaultContentItems>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="eShop.Infrastructure.FSharp\Validation.fs" />
    <Compile Include="eShop.Infrastructure.FSharp\Result.fs" />
    <Compile Include="eShop.Infrastructure.FSharp\Async.fs" />
    <Compile Include="eShop.Infrastructure.FSharp\AsyncResult.fs" />
    <Compile Include="eShop.Infrastructure.Db\DbResult.fs" />
    <Compile Include="eShop.Infrastructure.Db\Dapper.fs" />
    <Compile Include="eShop.Domain.Shared\ConstrainedType.fs" />
    <Compile Include="eShop.Domain.Shared\Types.fs" />
    <Compile Include="eShop.Domain.Shared\Command.fs" />
    <Content Include="eShop.Domain.ConferenceManagement\_ViewStart.cshtml" />
    <Content Include="eShop.Domain.ConferenceManagement\_Layout.cshtml" />
    <Compile Include="eShop.Domain.ConferenceManagement\CommonTypes.fs" />
    <Compile Include="eShop.Domain.ConferenceManagement\CreateConference.PublicTypes.fs" />
    <Compile Include="eShop.Domain.ConferenceManagement\CreateConference.Implementation.fs" />
    <Compile Include="eShop.Domain.ConferenceManagement\CreateConference.DTO.fs" />
    <Compile Include="eShop.Domain.ConferenceManagement\CreateConference.Web.fs" />
    <Content Include="eShop.Domain.ConferenceManagement\CreateConference.cshtml" />
    <Content Include="eShop.Domain.ConferencePublic\_ViewStart.cshtml" />
    <Content Include="eShop.Domain.ConferencePublic\_Layout.cshtml" />
    <Compile Include="eShop.Domain.ConferencePublic\DisplayConference.Web.fs" />
    <Content Include="eShop.Domain.ConferencePublic\DisplayConference.cshtml" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="web.config" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="eShop.Domain.ConferenceManagement\*.cshtml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="eShop.Domain.ConferencePublic\*.cshtml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Watch Include="**\*.cshtml" Exclude="bin\**\*" />
  </ItemGroup>

  <Import Project="..\..\.paket\Paket.Restore.targets" />

</Project>